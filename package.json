{
  "version": "0.0.9",
  "name": "ktx2-encoder",
  "description": "KTX2(.ktx2) encoder for browser applications",
  "type": "module",
  "packageManager": "pnpm@8.6.2",
  "exports": {
    "node": "./dist/node.esm.js",
    "default": "./dist/web.esm.js"
  },
  "types": "types/index.d.ts",
  "repository": "github:gz65555/ktx2-encoder",
  "author": {
    "name": "Hu Song",
    "email": "gz65555@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "docs": "typedoc src/index.ts --plugin typedoc-plugin-markdown --out ./docs",
    "build": "tsc && rollup -c",
    "test": "npm run test:node && npm run test:web",
    "test:node": "vitest ./test/node.test.ts",
    "test:web": "vitest --browser.name=chrome ./test/web.test.ts",
    "release": "bumpp"
  },
  "keywords": [
    "ktx",
    "ktx2",
    "basis",
    "texture",
    "encoder",
    "webgl",
    "webgpu"
  ],
  "files": [
    "types",
    "dist"
  ],
  "devDependencies": {
    "@ant-design/icons": "^5.2.5",
    "@galacean/engine": "^1.1.0-beta.50",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@swc/core": "^1.3.35",
    "@types/node": "^20.11.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/browser": "^1.3.1",
    "@webgpu/types": "^0.1.40",
    "antd": "^5.8.2",
    "bumpp": "^9.4.0",
    "jszip": "^3.10.1",
    "prettier": "^2.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3",
    "rollup-plugin-swc3": "^0.8.0",
    "sharp": "^0.33.2",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "^5",
    "vite": "^5.1.5",
    "vitest": "^1.3.1",
    "webdriverio": "^8.32.4"
  },
  "dependencies": {
    "@swc/helpers": "^0.4.14",
    "ktx-parse": "^0.6.0"
  }
}
